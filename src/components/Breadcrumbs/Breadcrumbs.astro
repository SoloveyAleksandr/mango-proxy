---
interface Props {
  items: string[];
  theme?: "dark";
}

const { items, theme } = Astro.props;
---

<div class="breadcrumbs" class:list={[{ ["breadcrumbs_" + theme]: theme }]}>
  <div class="container breadcrumbs__container">
    {
      items.map((el, i) => {
        if (i === items.length - 1) {
          return <span class="label-m breadcrumbs__link">{el}</span>;
        } else {
          return (
            <a href="#" class="label-m c-grey-7 hover:500 breadcrumbs__link">
              {el}
            </a>
          );
        }
      })
    }
  </div>
</div>
