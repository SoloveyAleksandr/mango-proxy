---
// @ts-nocheck
import { Sprite } from "astro-icon";
import type { IUIButtonAttributes, IUIVariableComponent } from "src/interface";

interface Props
  extends IUIButtonAttributes,
    IUIVariableComponent,
    astroHTML.JSX.ButtonHTMLAttributes {
  size?: "small";
}

const { component: Wrapper = "button", size, ...props } = Astro.props;
---

<Wrapper
  class="label-l additional-btn"
  class:list={[
    {
      ["additional-btn_" + size]: size,
    },
  ]}
  {...props}
>
  <slot />
  <Sprite name="plus" />
</Wrapper>
